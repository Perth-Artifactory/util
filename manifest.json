{
    "display_information": {
        "name": "Helper utility scripts",
        "description": "A collection of scripts to help with common tasks",
        "background_color": "#333436"
    },
    "features": {
        "bot_user": {
            "display_name": "util",
            "always_online": false
        }
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "channels:read",
                "groups:read",
                "im:read",
                "incoming-webhook",
                "mpim:read",
                "chat:write"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "channel_created"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}